---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Friend from '../components/Friend.astro';
import { scenarios } from '../lib/content';
---

<Layout title="Kidia - Tu Perfil">
  <Header />
  
  <main class="profile-container">
    <div class="profile-header">
       <div class="avatar-circle">
          <Friend state="idle" />
       </div>
       <h1>Tu Progreso</h1>
       <p>Â¡Sigue aprendiendo para desbloquear mÃ¡s insignias!</p>
    </div>
    
    <div class="badges-section">
       <h2>Mis Insignias</h2>
       <div id="badges-grid" class="badges-grid">
          <!-- Client-side hydration -->
          <div class="loading">Cargando insignias...</div>
       </div>
    </div>
    
    <div class="actions">
       <a href="/" class="btn">Volver a Misiones</a>
    </div>
  </main>
</Layout>

<script>
    import { userProgress } from '../lib/storage';
    import { scenarios } from '../lib/content';
    
    // We need to wait for persistent map to load or just read it
    // Nano stores persistent syncs with localStorage instantly usually.
    
    const grid = document.getElementById('badges-grid');
    
    function renderBadges() {
        const progress = userProgress.get();
        const earnedBadges = progress.badges || [];
        
        // Let's list all possible badges and show them locked/unlocked
        const allBadges = scenarios.map(s => s.badge);
        
        grid.innerHTML = allBadges.map(badge => {
            const isUnlocked = earnedBadges.includes(badge.id);
            return `
               <div class="badge-card ${isUnlocked ? 'unlocked' : 'locked'}">
                  <div class="badge-icon">${isUnlocked ? badge.icon : 'ðŸ”’'}</div>
                  <div class="badge-name">${badge.name}</div>
                  <div class="badge-status">${isUnlocked ? 'Conseguida' : 'Bloqueada'}</div>
               </div>
            `;
        }).join('');
    }
    
    // Initial render
    renderBadges();
    
    // Listen for changes (though page load is enough usually)
    userProgress.subscribe(renderBadges);
</script>

<style>
    .profile-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        text-align: center;
    }
    
    .profile-header {
        margin-bottom: 3rem;
    }
    
    .avatar-circle {
        width: 150px;
        height: 150px;
        margin: 0 auto 1.5rem;
        background: radial-gradient(circle, rgba(255,255,255,0.1), transparent);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .badges-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }
    
    .badge-card {
        background: var(--color-surface);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 1rem;
        padding: 1.5rem;
        transition: transform 0.2s;
    }
    
    .badge-card.unlocked {
        border-color: var(--color-primary);
        box-shadow: 0 0 20px rgba(34, 211, 238, 0.1);
    }
    
    .badge-card.locked {
        opacity: 0.5;
        background: rgba(0,0,0,0.2);
    }
    
    .badge-icon {
        font-size: 3rem;
        margin-bottom: 0.5rem;
    }
    
    .badge-name {
        font-weight: bold;
        margin-bottom: 0.25rem;
    }
    
    .badge-status {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #888;
    }
    
    .unlocked .badge-status {
        color: var(--color-primary);
    }
    
    .actions {
        margin-top: 3rem;
    }
    
    .loading {
        grid-column: 1 / -1;
        color: #888;
    }
</style>
