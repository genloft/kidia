<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .hero {
    display: flex;
    flex-direction: column-reverse;
    align-items: center;
    gap: 3rem;
    margin: 4rem 0;
    text-align: center;
  }
  
  @media (min-width: 768px) {
    .hero {
      flex-direction: row;
      text-align: left;
      justify-content: space-between;
    }
    
    .hero-content {
      max-width: 50%;
    }
  }
  
  h1 {
    font-size: 3.5rem;
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }
  
  .subtitle {
    font-size: 1.25rem;
    color: #a1a1aa;
    margin-bottom: 2.5rem;
  }
  
  .cta-container {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
  }
  
  @media (min-width: 768px) {
      .cta-container { justify-content: flex-start; }
  }

  .pulse {
    animation: pulse-glow 2s infinite;
  }
  
  .features {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-top: 6rem;
  }
  
  .feature-card {
      background: rgba(255,255,255,0.03);
      padding: 2rem;
      border-radius: 1rem;
      border: 1px solid rgba(255,255,255,0.05);
      transition: transform 0.2s;
  }
  
  .feature-card:hover {
      transform: translateY(-5px);
      background: rgba(255,255,255,0.05);
  }
  
  .feature-card h3 {
      color: var(--color-primary);
      margin-bottom: 1rem;
      font-size: 1.5rem;
  }
  
  .feature-card p {
      color: #d4d4d8;
      line-height: 1.6;
  }

  .hero-visual {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 500px;
  }

  .kidia-presentation {
      position: relative;
      display: flex;
      align-items: flex-start;
      justify-content: center;
  }

  .kidia-character {
      width: 500px; /* Increased from 400px */
      height: auto;
      filter: drop-shadow(0 10px 30px rgba(34, 211, 238, 0.3));
      animation: float-character 3s ease-in-out infinite;
  }

  @keyframes float-character {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
  }

  .speech-bubble {
      position: absolute;
      top: 60px; /* Position near her face */
      right: 420px; /* Adjusted for larger character */
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.98));
      color: #1e293b;
      padding: 1.25rem 1.5rem; /* Increased padding for more breathing room */
      border-radius: 1rem;
      box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.2), 0 10px 20px -8px rgba(0, 0, 0, 0.15);
      max-width: 420px; /* Increased from 350px */
      min-width: 280px; /* Ensure minimum width */
      font-size: 1.05rem; /* Slightly larger font */
      line-height: 1.5; /* More line spacing */
      letter-spacing: 0.3px; /* Add letter spacing for less cramped text */
      border: 2px solid rgba(34, 211, 238, 0.2);
      animation: float-bubble 3s ease-in-out infinite;
  }

  @keyframes float-bubble {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-5px); }
  }
  
  .speech-bubble p {
      margin: 0;
      color: #334155;
      font-weight: 500;
      transition: opacity 0.3s ease;
  }

  /* Tail pointing RIGHT towards Kidia's mouth */
  .speech-bubble::before {
      content: '';
      position: absolute;
      right: -15px;
      top: 30px;
      width: 0;
      height: 0;
      border-left: 18px solid rgba(255, 255, 255, 0.95);
      border-top: 12px solid transparent;
      border-bottom: 12px solid transparent;
  }

  @media (max-width: 968px) {
      .hero-visual {
          min-height: auto;
      }

      .kidia-presentation {
          flex-direction: column;
          align-items: center;
      }

      .kidia-character {
          width: 280px;
      }

      .speech-bubble {
          position: relative;
          top: auto;
          left: auto;
          margin-top: -40px;
          max-width: 90%;
      }

      /* Tail pointing UP towards Kidia's face on mobile */
      .speech-bubble::before {
          left: 50%;
          top: -12px;
          transform: translateX(-50%);
          border-right: 12px solid transparent;
          border-left: 12px solid transparent;
          border-bottom: 12px solid rgba(255, 255, 255, 0.95);
          border-top: none;
      }
  }
</style>
