        </div>
      </div>
      
      <div class="hero-visual">
          <div class="kidia-presentation">
              <img src="/kidia-standing.png" alt="Kidia" class="kidia-character" />
              <div class="speech-bubble" id="kidia-bubble">
                  <p id="bubble-text">¬°Hola! Soy Kidia üëã</p>
              </div>
          </div>
      </div>
     
      <script>
        const messages = [
          "¬°Hola! Soy Kidia üëã",
          "¬øEmpezamos la aventura? üöÄ",
          "¬øC√≥mo est√°s hoy? üòä",
          "¬øSabes qu√© es una IA? ü§ñ",
          "¬°Vamos a aprender juntos! ‚ú®",
          "¬øListo para explorar? üåü"
        ];
        
        let currentIndex = 0;
        const bubbleText = document.getElementById('bubble-text');
        const kidiaImg = document.querySelector('.kidia-character');
        let typingInterval;
        
        // Occasionally change Kidia's pose for variety
        const kidiaVariations = [
          '/kidia-standing.png',
          '/kidia_thinking.png',
          '/kidia_surprised.png'
        ];
        
        function typeMessage(message) {
          if (!bubbleText) return;
          
          let charIndex = 0;
          bubbleText.textContent = '';
          
          // Clear any existing typing interval
          if (typingInterval) clearInterval(typingInterval);
          
          typingInterval = setInterval(() => {
            if (charIndex < message.length) {
              bubbleText.textContent += message[charIndex];
              charIndex++;
            } else {
              clearInterval(typingInterval);
            }
          }, 50); // 50ms per character
        }
        
        function rotateMessage() {
          currentIndex = (currentIndex + 1) % messages.length;
          typeMessage(messages[currentIndex]);
          
          // Occasionally change Kidia's expression (20% chance)
          if (kidiaImg && Math.random() < 0.2) {
            const randomPose = kidiaVariations[Math.floor(Math.random() * kidiaVariations.length)];
            kidiaImg.src = randomPose;
          }
        }
        
        // Type the first message on load
        typeMessage(messages[0]);
        
        // Rotate every 4 seconds (increased to give time for typing)
        setInterval(rotateMessage, 4000);
      </script>
    </section>
    
