---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Friend from '../../components/Friend.astro';
import ChatBox from '../../components/ChatBox.astro';
import Quiz from '../../components/Quiz.astro';
import AnimationStage from '../../components/AnimationStage.astro';
import { getScenarioById } from '../../lib/scenario-loader';

const { slug } = Astro.params;
const scenario = await getScenarioById(slug || '');

if (!scenario) {
  return Astro.redirect('/404');
}
---

<Layout title={`Kidia - ${scenario.title}`}>
  <Header />
  
  <main class="scenario-layout">
    <aside class="sidebar">
       <div class="friend-wrapper">
          <img 
            src="/kidia_explaining.png" 
            alt="Kidia" 
            class="kidia-explaining" 
            id="kidia-expression"
            data-default="explaining"
          />
       </div>
       <div class="scenario-info">
           <h1>{scenario.title}</h1>
           <p>{scenario.description}</p>
           <div class="progress-indicator">
               Insignia <span class="badge-preview">{scenario.badge.icon}</span> al finalizar
           </div>
           
           {scenario.deep_mode?.enabled && (
             <div class="deep-mode-info">
                ℹ️ +Info Disponible
             </div>
           )}
       </div>
    </aside>
    
    <section class="chat-area">
        <ChatBox scenario={scenario} />
    </section>
    
    <Quiz scenario={scenario} />
    <AnimationStage />
  </main>
  
  <script>
    // Dynamic Kidia expression system
    const kidiaExpressions = {
      explaining: '/kidia_explaining.png',
      thinking: '/kidia_thinking.png',
      surprised: '/kidia_surprised.png',
      error: '/kidia_error.png',
      celebrating: '/kidia_celebrating.png'
    };

    function setKidiaExpression(expression) {
      const kidiaImg = document.getElementById('kidia-expression');
      if (kidiaImg && kidiaExpressions[expression]) {
        kidiaImg.src = kidiaExpressions[expression];
        kidiaImg.alt = `Kidia ${expression}`;
      }
    }

    // Listen for custom events to change Kidia's expression
    window.addEventListener('kidia:expression', (e) => {
      const { expression } = e.detail;
      setKidiaExpression(expression);
    });

    // Change expression based on quiz results
    window.addEventListener('quiz:correct', () => {
      setKidiaExpression('celebrating');
      setTimeout(() => setKidiaExpression('explaining'), 3000);
    });

    window.addEventListener('quiz:incorrect', () => {
      setKidiaExpression('thinking');
      setTimeout(() => setKidiaExpression('explaining'), 2000);
    });

    window.addEventListener('quiz:error', () => {
      setKidiaExpression('error');
      setTimeout(() => setKidiaExpression('explaining'), 3000);
    });
    
    // Badge unlocked celebration
    window.addEventListener('badge:unlocked', () => {
      setKidiaExpression('celebrating');
      setTimeout(() => setKidiaExpression('surprised'), 2000);
      setTimeout(() => setKidiaExpression('explaining'), 4000);
    });
  </script>
</Layout>

<style>
    .scenario-layout {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        height: calc(100vh - 80px);
    }
    
    @media (min-width: 768px) {
        .scenario-layout {
            grid-template-columns: 300px 1fr;
        }
    }
    
    .sidebar {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        align-items: center;
        text-align: center;
    }
    
    .friend-wrapper {
        margin-top: 2rem;
    }
    
    .kidia-explaining {
        width: 200px;
        height: auto;
        filter: drop-shadow(0 8px 20px rgba(34, 211, 238, 0.3));
        animation: float-kidia 3s ease-in-out infinite;
    }
    
    @keyframes float-kidia {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-8px); }
    }
    
    .scenario-info h1 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        line-height: 1.2;
    }
    
    .scenario-info p {
        color: #a1a1aa;
        font-size: 0.9rem;
    }
    
    .badge-preview {
        font-size: 1.5rem;
        vertical-align: middle;
    }
    
    .progress-indicator {
        margin-top: 1rem;
        padding: 0.5rem;
        background: rgba(255,255,255,0.05);
        border-radius: 0.5rem;
        font-size: 0.8rem;
    }
    
    .chat-area {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
</style>
