---
interface Props {
  scenario: any;
  index: number;
}

const { scenario, index } = Astro.props;
---

<a 
  href={`/scenario/${scenario.id}`} 
  class="mission-node" 
  data-id={scenario.id} 
  data-req={scenario.required_badge_id || ''}
>
  <div class="node-icon">ðŸ”’</div> <!-- Default icon, updated by JS -->
  <div class="node-content">
      <span class="node-number">{String(index + 1).padStart(2, '0')}</span>
      <h3>{scenario.title}</h3>
      <p>{scenario.description}</p>
      <div class="status-badges">
        {scenario.difficulty === 'advanced' && <span class="tag-difficulty">ðŸ”¥ DifÃ­cil</span>}
      </div>
  </div>
  <div class="progress-ring-container hidden">
      <!-- circle chart inserted by JS -->
  </div>
</a>

<style>
    .mission-node {
        background: var(--color-surface);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 1rem;
        padding: 1.5rem;
        display: flex;
        gap: 1rem;
        text-decoration: none;
        color: var(--color-text);
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
        opacity: 0.6; /* Default locked visuals */
        filter: grayscale(0.8);
        pointer-events: none; /* Block click until JS validates */
    }

    /* Valid states (applied by JS) */
    .mission-node.available {
        opacity: 1;
        filter: grayscale(0);
        cursor: pointer;
        pointer-events: auto;
    }

    .mission-node.completed {
        border-color: #22c55e;
        opacity: 1;
        filter: grayscale(0);
        pointer-events: auto;
    }
    
    .mission-node.locked {
        /* Keep default */
    }

    .mission-node:hover.available {
        transform: translateY(-5px);
        border-color: var(--color-primary);
        box-shadow: 0 10px 30px -10px rgba(34, 211, 238, 0.3);
    }

    .node-icon {
        font-size: 2rem;
        min-width: 50px;
        height: 50px;
        background: rgba(255,255,255,0.05);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .mission-node.completed .node-icon {
        background: rgba(34, 220, 100, 0.1);
        color: #22c55e;
    }

    .node-content {
        flex: 1;
    }

    .node-content h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.1rem;
    }

    .node-content p {
        margin: 0;
        font-size: 0.9rem;
        color: #a1a1aa;
    }

    .node-number {
        font-size: 0.7rem;
        color: var(--color-primary);
        display: block;
        margin-bottom: 0.2rem;
        font-weight: bold;
    }
    
    .tag-difficulty {
        font-size: 0.6rem;
        background: #f97316;
        color: white;
        padding: 2px 6px;
        border-radius: 4px;
    }
    
    .hidden { display: none; }
</style>
