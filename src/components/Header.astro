---
const currentPath = Astro.url.pathname;
const isActive = (path: string) => currentPath === path ? 'active' : '';
const isParent = currentPath === '/parents';
---

<header class="header">
  <div class="logo">
    <a href="/">
      <span class="logo-text">Kidia</span>
      <span class="logo-beta">beta</span>
    </a>
  </div>
  
  <nav class="main-nav">
    <a href="/mapa" class={`nav-link ${isActive('/mapa')}`}>Mapa</a>
    <a href="/insignias" class={`nav-link ${isActive('/insignias')}`}>Insignias</a>
    <a href="/about" class={`nav-link ${isActive('/about')}`}>Info</a>
  </nav>

  <div class="right-cluster">
      <div class="parent-zone">
          <a href="/parents" class={`nav-link parent-link ${isActive('/parents')}`}>Zona Padres ðŸ”’</a>
      </div>
      
      <div id="auth-ui">
          <a href="/login" class="btn-login">Acceder</a>
      </div>
  </div>
</header>

<script>
    import { supabase } from '../lib/supabase';
    import { SyncService } from '../lib/sync-service';
    
    const authUi = document.getElementById('auth-ui');
    
    async function updateAuth() {
        const { data: { session } } = await supabase.auth.getSession();
        
        if (session?.user) {
            const email = session.user.email || '';
            const displayEmail = email.length > 20 ? email.substring(0, 17) + '...' : email;
            
            authUi.innerHTML = `
                <div class="user-info">
                    <span class="user-email">${displayEmail}</span>
                    <button id="logout-btn" class="btn-logout">Salir</button>
                </div>
            `;
            
            const logoutBtn = document.getElementById('logout-btn');
            logoutBtn?.addEventListener('click', async () => {
                await supabase.auth.signOut();
                window.location.href = '/';
            });
            
            // Sync progress on session detection
            SyncService.onLogin().catch(err => {
                console.error('[Header] Sync failed:', err);
            });
        }
    }
    
    updateAuth();
    
    // Listen for auth changes
    supabase.auth.onAuthStateChange((event, session) => {
        if (event === 'SIGNED_IN') {
            updateAuth();
        } else if (event === 'SIGNED_OUT') {
            window.location.reload();
        }
    });
</script>

